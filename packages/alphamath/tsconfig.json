{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": false,
        "paths": {
            "@/*": ["./src/*"],
            "@alan404/vec2": ["../vec2/src/index.ts"],
            "@alan404/react-workspace": ["../react-workspace/src/index.ts"],
        }
    },
    "include": ["src"],
    "references": [
        {
            "path": "../vec2",
        },
        {
            "path": "../react-workspace",
        },
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
